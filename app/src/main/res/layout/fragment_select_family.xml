<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.caudelldevelopment.udacity.capstone.household.household.SelectFamilyFrag">

    <TextView
        android:id="@+id/select_header"
        android:text="@string/select_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/select_subheader"
        android:text="@string/select_subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/family_select_empty_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/family_select_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
